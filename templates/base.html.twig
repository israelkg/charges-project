{# templates/base.html.twig #}
<!DOCTYPE html>
<html lang="pt-BR">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Bem-vindo!</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.2em%22 x=%220.1em%22 font-size=%2296%22 fill=%22%23fff%22>⚫️</text></svg>">
        
        <script src="https://cdn.tailwindcss.com"></script>
        <script src="https://unpkg.com/imask"></script>
        <script src="https://cdn.jsdelivr.net/npm/cleave.js@1/dist/cleave.min.js"></script>

        <style>
            body { font-family: 'Inter', sans-serif; }
            ul li {
                color: red;
            }

            @keyframes slide-in {
                from {
                    transform: translateY(-10px);
                    opacity: 0;
                }
                to {
                    transform: translateY(0);
                    opacity: 1;
                }
            }
            .animate-slide-in {
                animation: slide-in 0.4s ease-out;
            }
        </style>

    </head>
    <body class="bg-blue-950 text-gray-100"> 
        <div id="flash-container" class="fixed top-6 left-1/2 transform -translate-x-1/2 z-50 space-y-4 w-full max-w-md px-4">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="flash-message animate-slide-in opacity-100 transition-opacity duration-500 px-5 py-4 rounded-lg shadow-lg border 
                        {% if label == 'success' %}
                            bg-green-50 border-green-200 text-green-800
                        {% elseif label == 'error' %}
                            bg-red-50 border-red-200 text-red-800
                        {% elseif label == 'warning' %}
                            bg-yellow-50 border-yellow-200 text-yellow-800
                        {% else %}
                            bg-blue-50 border-blue-200 text-blue-800
                        {% endif %}
                    ">
                        <div class="flex items-start justify-between gap-4">
                            <div class="flex items-center gap-3">
                                {% if label == 'success' %}
                                    <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                        <path d="M5 13l4 4L19 7" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                {% elseif label == 'error' %}
                                    <svg class="w-6 h-6 text-red-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                        <path d="M6 18L18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                {% elseif label == 'warning' %}
                                    <svg class="w-6 h-6 text-yellow-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                        <path d="M12 9v2m0 4h.01M5.07 19h13.86A2 2 0 0020.92 17L12 3 3.08 17a2 2 0 001.99 2z" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                {% else %}
                                    <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
                                        <path d="M13 16h-1v-4h-1m1-4h.01M12 2a10 10 0 1010 10A10 10 0 0012 2z" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                {% endif %}
                                <p class="text-sm font-medium">{{ message }}</p>
                            </div>

                            <button onclick="this.closest('.flash-message').remove()" class="text-gray-400 hover:text-gray-700 transition text-xl leading-none">&times;</button>
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        <nav class="bg-blue-900 shadow-lg mb-6"> 
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-16">
                    <div class="flex">
                        <div class="flex-shrink-0 flex items-center">
                            <a class="text-2xl font-bold text-white hover:text-blue-200 transition-colors duration-200" href="{{ path('app_charges_list') }}">Cobranças Online</a>
                        </div>

                        <div class="hidden sm:-my-px sm:ml-6 sm:flex sm:space-x-8">
                            <a href="{{ path('app_charges_list') }}" class="inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-base font-medium leading-5 text-blue-200 hover:text-white hover:border-blue-400 focus:outline-none focus:text-white focus:border-blue-400 transition duration-150 ease-in-out">
                                Cobranças
                            </a>
                            <a href="{{ path('app_charges_new') }}" class="inline-flex items-center px-1 pt-1 border-b-2 border-transparent text-base font-medium leading-5 text-blue-200 hover:text-white hover:border-blue-400 focus:outline-none focus:text-white focus:border-blue-400 transition duration-150 ease-in-out">
                                Nova Cobrança
                            </a>
                        </div>
                    </div>
                    <div class="flex items-center space-x-4 text-white">
                        {% if app.user %}
                            <span class="text-sm text-blue-100">
                                Logado como: <strong>{{ app.user.name ?? app.user.email }}</strong>
                            </span>
                            <a href="{{ path('app_logout') }}" class="text-sm bg-red-600 hover:bg-red-700 px-3 py-1 rounded-lg font-semibold transition"> Sair </a>
                        {% else %} 
                            <a href="{{ path('app_login') }}" class="text-sm bg-blue-700 hover:bg-blue-800 px-3 py-1 rounded-lg font-semibold transition">  Login </a>
                        {% endif %}
                    </div>
                </div>
            </div>
        </nav>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}
            <main class="py-4">
                {% block body %}{% endblock %}
            </main>
        </div>

        <script src="{{ asset('js/utils.js') }}"></script>    
    </body>
</html>