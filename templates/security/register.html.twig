{% extends 'base.html.twig' %}

{% block title %}Criar Conta{% endblock %}

{% block body %}
  <div class="max-w-md mx-auto mt-32 p-8 bg-white rounded-2xl shadow-xl">
    <h1 class="text-3xl font-extrabold text-gray-900 mb-6 text-center">Criar Conta</h1>

    {{ form_start(form) }}
      <div class="space-y-4">

        <div>
          {{ form_label(form.name) }}
          {{ form_widget(form.name) }}
          {{ form_errors(form.name) }}
        </div>

        <div>
          {{ form_label(form.email) }}
          {{ form_widget(form.email) }}
          {{ form_errors(form.email) }}
        </div>

        <div>
          {{ form_label(form.password) }}
          {{ form_widget(form.password) }}
          {{ form_errors(form.password) }}
        </div>

        <div>
          {{ form_widget(form.submit, {'attr': {'class': 'w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded-lg transition duration-300'}}) }}
        </div>

        <div class="text-sm text-center text-gray-600">
          JÃ¡ tem uma conta?
          <a href="{{ path('app_login') }}" class="text-blue-600 hover:underline font-medium">Entrar</a>
        </div>
        
      </div>
    {{ form_end(form) }}
  </div>
{% endblock %}
