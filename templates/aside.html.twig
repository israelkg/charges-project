<aside class="w-64 bg-white shadow-xl flex flex-col justify-between fixed left-0 top-0 bottom-0 z-40">
    <div>
        <div class="p-6 text-2xl font-extrabold text-blue-800 border-b border-gray-200 tracking-wide">
            <a href="{{ path('app_dashboard') }}" class="hover:text-blue-500 transition">Cobranças</a>
        </div>

        {# Novo menu lateral com ícones e labels #}
        <nav class="p-4">
            <ul class="space-y-3 relative">
                {% set menuItems = [
                    {'icon': 'home', 'label': 'Dashboard', 'href': path('app_dashboard')},
                    {'icon': 'folder', 'label': 'Minhas Cobranças', 'href': path('app_charges_list')},
                    {'icon': 'plus-circle', 'label': 'Nova Cobrança', 'href': path('app_charges_new')},
                    {'icon': 'settings', 'label': 'Configurações', 'href': '#'}
                ] %}

                {% for item in menuItems %}
                    <li class="group relative">
                        <a href="{{ item.href }}" class="flex items-center justify-center w-14 h-14 text-gray-500 hover:text-white hover:bg-blue-600 bg-gray-100 rounded-xl transition-all duration-300 relative">
                            <i data-feather="{{ item.icon }}"></i>
                            <span class="absolute left-full ml-4 px-3 py-1.5 text-sm text-blue-700 bg-white rounded-lg shadow opacity-0 group-hover:opacity-100 transform scale-95 group-hover:scale-100 transition-all duration-300 whitespace-nowrap z-10">
                                {{ item.label }}
                            </span>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </div>

    <div class="p-5 border-t border-gray-200 bg-gray-50 text-blue-800 text-sm">
        {% if app.user %}
            <p class="mb-1 text-xs text-gray-500">Logado como:</p>
            <p class="font-semibold text-blue-800 truncate">{{ app.user.name ?? app.user.email }}</p>
            <div class="mt-3">
                <a href="{{ path('app_logout') }}"
                   class="inline-block bg-red-600 hover:bg-red-700 text-white text-xs font-semibold px-4 py-1.5 rounded-lg transition duration-200">
                    Sair
                </a>
            </div>
        {% else %}
            <a href="{{ path('app_login') }}"
               class="inline-block bg-blue-700 hover:bg-blue-800 text-white text-xs font-semibold px-4 py-1.5 rounded-lg transition duration-200">Login</a>
        {% endif %}
    </div>
</aside>